extends layout
block content
  h1= title
  p Welcome to #{title}
  form(method='post', action='/guestbook/')
    div
        label(for='message')= t('form-comment.message')
    div
        textarea#message(name='message')
        if (errors && errors.errors.message)
            span.error= errors.errors.message.message
    div
        label(for ='name')= t('form-comment.name')
    div
        input#name(name='name')
        if (errors && errors.errors.name)
            span.error= errors.errors.name.message
    div
        label(for ='age')= t('form-comment.age')
    div
        input#name(name='age')
        if (errors && errors.errors.age)
            span.error= errors.errors.age.message
    div
        input(type='submit', value=t('form-comment.submit'))

    h2 Messages so far
    if messages
        .messages
        div
            each msg in messages
                div.gbmsg
                    p= msg.message
                    cite= msg.name
                    cite= msg.age
                    i= msg.date
    else
        None